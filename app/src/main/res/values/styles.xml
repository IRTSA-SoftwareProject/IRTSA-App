        <item name="colorPrimary">@color/colorDarkGrey</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="colorAccent">@color/colorLightRed</item>
        <item name="android:statusBarColor">@color/colorDarkGrey</item>
        <item name="android:navigationBarColor">@color/colorDarkGrey</item>
        <item name="android:windowBackground">@color/colorOffWhite</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorDarkGrey</item>
