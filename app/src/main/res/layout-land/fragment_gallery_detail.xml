<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context=".gallery.GalleryDetailFragment">

    <com.swinburne.irtsa.irtsa.utility.ZoomableImageView
        android:id="@+id/galleryDetailImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/phase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/galleryDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="placeholder"
        app:layout_constraintBottom_toTopOf="@+id/galleryDetailDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/galleryDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder"
        app:layout_constraintBottom_toTopOf="@+id/galleryDetailDate"
        app:layout_constraintEnd_toEndOf="@+id/galleryDetailName"
        app:layout_constraintStart_toStartOf="@+id/galleryDetailName"
        app:layout_constraintTop_toBottomOf="@+id/galleryDetailName" />

    <TextView
        android:id="@+id/galleryDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/galleryDetailDescription"
        app:layout_constraintStart_toStartOf="@+id/galleryDetailDescription"
        app:layout_constraintTop_toBottomOf="@+id/galleryDetailDescription" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>